{
    "name": "smcassar/laravel-query-filters",
    "description": "Smart query filters for Laravel",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8",
        "illuminate/http": "^8",
        "illuminate/database": "^8"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Smcassar\\LaravelQueryFilters\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Smcassar\\LaravelQueryFilters\\QueryFiltersServiceProvider"
            ]
        }
    }
}
